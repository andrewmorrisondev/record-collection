<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<% if (user) { %>
  <div>
    <h2>Edit the Record!</h2>
    <form action="/records/<%= record._id %>?_method=PUT" method="POST">
      <label>Title:
        <input type="text" name="title" value="<%= record.title %>" autocomplete="off">
      </label>
      <label>Artist:
        <input type="text" name="artist" value="<%= record.artist %>" autocomplete="off">
      </label>
      <label>Year:
        <input type="number" name="year" value="<%= record.year %>" autocomplete="off">
      </label>
      <label>Single:
        <input type="text" name="single" value="<%= record.single %>" autocomplete="off">
      </label>
      <button type="submit">Edit Record</button>
    </form>
  </div>
<% } %>

