<div class="profile-cards">
  <% profiles.forEach(profile => { %>
    <div class="profile-card">
      <% if (profile.avatar) { %>
        <div class="profile-avatar">
            <a href="/profiles/<%= profile._id %>">
              <img src="<%= profile.avatar %>" alt="<%= profile.name %>'s avatar"/>
            </a>
            <p><%= profile.name %></p>
          </div>
          <div class="profile-stats">
            <div>
              <p>#ofposts</p>
              <p>Records</p>
            </div>
            <div>
              <p>#oflikes</p>
              <p>Likes</p>
            </div>
          </div>
      <% } %>
    </div>
  <% }) %>
</div>