<div class="record-card">
  <!-- BUTTONS -->
  <div class="record-buttons">
    <a href="/records/<%= record._id %>/">
      <i class="fa-solid fa-circle-info"></i>
    </a>
    <% if (record.owner.equals(user?.profile._id)) { %>
      <a href="/records/<%= record._id %>/edit">
        <i class="fa-solid fa-pen-to-square"></i>
      </a>
      <form action="/records/<%= record._id %>?_method=DELETE" class="delete-form"method="POST">
        <i class="fa-solid fa-trash-can" onclick="this.parentNode.submit()"></i>
      </form>
    <% } %>
  </div>
  <!-- ART -->
  <div class="record-art">
    <img src="https://picsum.photos/500/500" alt="albumart">
  </div>
  <!-- INFO -->
  <div class="record-info">
    <h2><%= record.title %></h2>
    <p><%= record.artist %></p>
    <p><%= record.single %></p>
    <p><%= record.year %></p>
  </div>
  <% if (record.comments.length > 0) { %>
    <p><%= record.comments.length %> Comments</p>
  <% } %>
  <% if (user) { %>
    <p>Owner: <%= record.owner.name %></p>
  <% } %>
</div>

