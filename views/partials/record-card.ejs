<div class="record-card">
  <!-- BUTTONS -->
  <% if (user) { %>
    <div class="like-record">
      <%- include('../partials/like-button') %>
    </div>
  <% } %>
  <div class="record-buttons hidden">
    <a href="/records/<%= record._id %>/">
      <i class="fa-solid fa-circle-info"></i>
    </a>
    <% if (record.owner.equals(user?.profile._id)) { %>
      <a href="/records/<%= record._id %>/edit">
        <i class="fa-solid fa-pen-to-square"></i>
      </a>
      <form action="/records/<%= record._id %>?_method=DELETE" class="delete-form"method="POST">
        <i class="fa-solid fa-trash-can" onclick="this.parentNode.submit()"></i>
      </form>
    <% } %>
  </div>
  <!-- ART -->
  <div class="record-art">
    <img src="<%= record.art %>" alt="albumart">
  </div>
  <!-- INFO -->
  <div class="record-info hidden">
    <h2><%= record.title %></h2>
    <p><%= record.artist %></p>
    <p><%= record.year %></p>
  </div>
</div>

